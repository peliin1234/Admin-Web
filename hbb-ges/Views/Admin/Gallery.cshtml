@using hbb_ges.EntityLayer.Concrete
@model List<Gallery>
@{
    ViewData["Title"] = "Gallery";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Galeri</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Başlık</th>
                        <th>Görsel</th>
                        <th>Düzenle</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>
                                <image src="/images/@item.Image" style="max-width: 150px;
                                   height: auto"></image>
                            </td>
                            <td><a href="/Admin/AddGallery/@item.Id/" class="btn btn-info"> <i class="fa fa-edit" /> </a></td>
                            <td><a href="/Admin/DeleteGallery/@item.Id/" class="btn btn-warning"> <i class="fa fa-trash" /> </a></td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
    <a href="/Admin/AddGallery/" class="btn btn-primary w-25 mx-auto">Yeni Görsel</a>
    <br />
</div>






