@using hbb_ges.EntityLayer.Concrete
@model List<Contact>
@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">İletişim </h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Başlık</th>
                            <th>Açıklama</th>
                            <th>Düzenle</th>
                        </tr>
                    </thead>
                    
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ContactTitle</td>
                                <td>@item.ContactDescription</td>
                                <td><a href="/Admin/EditContact/@item.ContactID/" class="btn btn-success"> <i class="fa fa-edit" /> </a></td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
        <br />
    </div>

