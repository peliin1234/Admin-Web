@model hbb_ges.EntityLayer.Concrete.Slider
@using System.Linq;
@{
    ViewData["Title"] = "EditSlider";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">İçerik Düzenle</h6>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("EditSlider", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {

            @Html.Hidden("id",@Model.Id)
            @Html.Label("Başlık")
            @Html.TextBoxFor(x=> x.Title,new{@class="form-control"})
            @Html.ValidationMessageFor(x=> x.Title)
            <br />
            @Html.Label("Açıklama")
            @Html.TextAreaFor(x=> x.SubTitle,5,2,new{@class="form-control"})
            @Html.ValidationMessageFor(x=> x.SubTitle)

            <br />
            @Html.Label("Görsel")
            <input type="file" class="form-control" name="img" required />
            <br />

            <button class="btn btn-success">Güncelle</button>
        }
    </div>
</div>




