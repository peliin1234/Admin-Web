@using hbb_ges.EntityLayer.Concrete
@model List<OtherCompany>
@{
    ViewData["Title"] = "OtherCompany";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Referanslarımız</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Firma Adı</th>
                            <th>Link</th>
                            <th>Görsel</th>
                            <th>Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>@item.Link</td>
                                <td>@item.Image</td>
                                
                                <td><a href="/Admin/EditOther/@item.Id/" class="btn btn-info"> <i class="fa fa-edit" /> </a></td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
         <a href="/Admin/EditOther/" class="btn btn-primary w-25 mx-auto">Yeni Referans</a>
        <br />
    </div>





