@using hbb_ges.EntityLayer.Concrete
@model List<Info>
@{
    ViewData["Title"] = "GES";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    List<Category> category = hbb_ges.Controllers.HomeController.myCat();
}
<div class="menu_wrapper">
    <div class="container">
        <div class="row">
            <div class="span12">
                <div class="menu_inner clearfix">

                    <div class="navbar navbar_">
                        <div class="navbar-inner navbar-inner_">
                            <a class="btn btn-navbar btn-navbar_" data-toggle="collapse" data-target=".nav-collapse_">
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </a>
                            <div class="nav-collapse nav-collapse_ collapse">
                                <ul class="nav sf-menu clearfix ">

                                    @foreach (var item in @category)
                                    {
                                        @if (@item.CategoryName == "Anasayfa")
                                        {
                                            <li><a href="/">@hbb_ges.Resources.Language.AnaSayfa</a></li>
                                        }
                                        @if (@item.CategoryName == "Hakkımızda")
                                        {
                                            <li><a href="/Home/About">@hbb_ges.Resources.Language.Hakkımızda</a></li>
                                        }
                                        @if (@item.CategoryName == "GES")
                                        {
                                            <li  class="active"><a href="/Home/GES">@hbb_ges.Resources.Language.GES</a></li>
                                        }
                                        @if (@item.CategoryName == "Galeri")
                                        {
                                            <li><a href="/Home/Gallery">@hbb_ges.Resources.Language.Galeri</a></li>
                                        }
                                        @if (@item.CategoryName == "İletişim")
                                        {
                                            <li><a href="/Home/Contact">@hbb_ges.Resources.Language.İletişim</a></li>
                                        }


                                    }



                                </ul>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>
</div>
<div class="breadcrumbs1_wrapper">
    <div class="container">
        <div class="row">
            <div class="span12">
                <div class="breadcrumbs1"><a href="index.html">Home</a><span></span>Information</div>
            </div>
        </div>
    </div>
</div>





<div id="content">
    <div class="container">
        <div class="row">
            <div class="span12">
                <div id="content_inner">

                    <div class="row">
                        <div class="span8">
                            @foreach (var item in @Model)
                            {
                                <div class="pad_left1">

                                    <h1>@item.title</h1>

                                    <div class="thumb3">
                                        <div class="thumbnail clearfix">
                                            <figure class=""><img src="/images/@item.image" style ="width:330px ;height:200px;" alt=""></figure>
                                            <div class="caption">
                                                <p>
                                                    @item.description

                                                </p>

                                            </div>
                                        </div>
                                    </div>


                                </div>
                            }


                        </div>
                        <div class="span4">

                            <div class="box1">
                                <div class="box1_top">GES</div>
                                <div class="box1_inner">

                                    <ul class="thumbnails">
                                        @foreach (var item in @ViewBag.otherCompany as List<OtherCompany>)
                                        {
                                            <li>
                                                <div class="thumbnail">
                                                    <figure ><img src="/images/@item.Image"  alt=""></figure>
                                                </div>
                                            </li>
                                        }
                                    </ul>

                                </div>
                            </div>

                            <br>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
