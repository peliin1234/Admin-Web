@using hbb_ges.EntityLayer.Concrete
@model List<About>
@{
    ViewData["Title"] = "About";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    List<Category> category = hbb_ges.Controllers.HomeController.myCat();
}
<div class="menu_wrapper">
    <div class="container">
        <div class="row">
            <div class="span12">
                <div class="menu_inner clearfix">

                    <div class="navbar navbar_">
                        <div class="navbar-inner navbar-inner_">
                            <a class="btn btn-navbar btn-navbar_" data-toggle="collapse" data-target=".nav-collapse_">
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </a>
                            <div class="nav-collapse nav-collapse_ collapse">
                                <ul class="nav sf-menu clearfix ">

                                    @foreach (var item in @category)
                                    {
                                        @if (@item.CategoryName == "Anasayfa")
                                        {
                                            <li><a href="/">@hbb_ges.Resources.Language.AnaSayfa</a></li>
                                        }
                                        @if (@item.CategoryName == "Hakkımızda")
                                        {
                                            <li class="active"><a href="/Home/About">@hbb_ges.Resources.Language.Hakkımızda</a></li>
                                        }
                                        @if (@item.CategoryName == "GES")
                                        {
                                            <li><a href="/Home/GES">@hbb_ges.Resources.Language.GES</a></li>
                                        }
                                        @if (@item.CategoryName == "Galeri")
                                        {
                                            <li><a href="/Home/Gallery">@hbb_ges.Resources.Language.Galeri</a></li>
                                        }
                                        @if (@item.CategoryName == "İletişim")
                                        {
                                            <li><a href="/Home/Contact">@hbb_ges.Resources.Language.İletişim</a></li>
                                        }


                                    }



                                </ul>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>
</div>
<div class="breadcrumbs1_wrapper">
    <div class="container">
        <div class="row">
            <div class="span12">
                <div class="breadcrumbs1"><a href="/Home/Index/">Home</a><span></span>About Us</div>
            </div>
        </div>
    </div>
</div>
<div id="content">
    <div class="container">
        <div class="row">
            <div class="span12">
                <div id="content_inner">
                    @foreach (var item in @Model)
                    {
                        <div class="pad_left1 pad_right1">
                            <h1>@item.AboutTitle </h1>
                        </div>

                        <div class="row">

                            <div class="span6">

                                <div class="pad-left1">
                                    <figure>
                                        <video style="height:100%; width:110%;" controls>
                                            <source src="/images/GES.mp4" type="video/mp4">
                                            Error Message
                                        </video>
                                    </figure>
                                    @* <figure class=""><img src="/images/@item.AboutImage" alt=""></figure>*@

                                </div>

                            </div>
                            <div class="span6">

                                <div class="pad-right1">
                                    <div class="caption">
                                        <p>
                                            <strong>
                                                @item.AboutDetails
                                            </strong>
                                        </p>

                                    </div>
                                </div>

                            </div>

                        </div>
                    }
                  
                </div>
            </div>
        </div>
    </div>
</div>
